ItemDisplay[key]: //Hide keys. You can still buy them.
ItemDisplay[gcv OR gcw OR gcg OR gcr OR gcb OR gcy OR skc]: //Ignore Chipped Gems
ItemDisplay[gfv OR gfw OR gfg OR gfr OR gfb OR gfy OR skf]: //Ignore Flawed Gems
ItemDisplay[gsv OR gsw OR gsg OR gsr OR gsb OR gsy OR sku]: //Ignore Regular Gems
//ItemDisplay[glg OR glb OR gly OR glr]: //Ignore All Flawless Except for Amethyst, Diamond, and Skull

ItemDisplay[gzv]: %ORANGE%[%PURPLE%@%ORANGE%] //Flawless Amethyst
ItemDisplay[glw]: %ORANGE%[%WHITE%@%ORANGE%] //Flawless Diamond
ItemDisplay[glg]: %ORANGE%[%GREEN%@%ORANGE%] //Flawless Emerald
ItemDisplay[glr]: %ORANGE%[%RED%@%ORANGE%] //Flawless Ruby
ItemDisplay[glb]: %ORANGE%[%BLUE%@%ORANGE%] //Flawless Sapphire
ItemDisplay[gly]: %ORANGE%[%YELLOW%@%ORANGE%] //Flawless Topaz
ItemDisplay[skl]: %ORANGE%[%GRAY%@%ORANGE%] //Flawless Skull

ItemDisplay[gpv]: %PURPLE%Amethyst //Perfect Gems
ItemDisplay[gpw]: %WHITE%Diamond
ItemDisplay[gpg]: %GREEN%Emereld
ItemDisplay[gpr]: %RED%Ruby
ItemDisplay[gpb]: %BLUE%Sapphire
ItemDisplay[gpy]: %YELLOW%Topaz
ItemDisplay[skz]: %GRAY%Skull

ItemDisplay[INF]: //Ignore Inferior Equipment

ItemDisplay[yps CLVL>41]: //Ignore all Antidote Potions
ItemDisplay[wms CLVL>41]: //Ignore all Thawing Potions
ItemDisplay[vps CLVL>41]: //Ignore all Stamina Potions
ItemDisplay[gpm OR opm OR opl OR ops OR gps OR gpl]: //Hide Choking, Exploding, Fulminating, Oil, Rancid, Strangling Potions
ItemDisplay[MAG !ID (aq2 OR cq2) CLVL>69]: //Ignore Unidentified Magic Arrows/Bolts (Level 70+)

ItemDisplay[RUNE<10]: %ORANGE%%RUNENAME% Rune %GRAY%(%RUNENUM%)
ItemDisplay[RUNE<20]: %ORANGE%%RUNENAME% Rune %GRAY%(%RUNENUM%)%NOTIFY-ITEM%
ItemDisplay[(RUNE>19 AND RUNE<26)]: %ORANGE%**  %GREEN%%RUNENAME% RUNE %GRAY%(%RUNENUM%) %ORANGE%**%NOTIFY-ITEM%
ItemDisplay[RUNE>25]: %PURPLE%********************  %GREEN%%RUNENAME% RUNE %GRAY%(%RUNENUM%) %PURPLE%********************%NOTIFY-ITEM%


